{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Inno Setup: Compile Script",
      "type": "process",
      "command": "C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe",
      "args": [
        "${file}"
      ],
      "presentation": {
        "reveal": "always",
        "echo": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Python: Pyinstaller Script",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "pyinstaller",
        "--clean",
        "${file}"
      ],
      "presentation": {
        "reveal": "always",
        "echo": false,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}